<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="jpa.salesforce-test">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>com.bo.openlogics.sales.model.Clasif_Articulo</class>
        <class>com.bo.openlogics.sales.model.Clasif_Categoria</class>
        <class>com.bo.openlogics.sales.model.Clasif_Clase</class>
        <class>com.bo.openlogics.sales.model.Clasif_Marca</class>
        <class>com.bo.openlogics.sales.model.Clasif_Movimiento</class>
        <class>com.bo.openlogics.sales.model.Clasif_Proveedor</class>
        <class>com.bo.openlogics.sales.model.Clasif_Unidad</class>
        <!--<class>com.bo.openlogics.sales.model.Detalle_Movimiento</class>
        <class>com.bo.openlogics.sales.model.BodegaDetalleMovimiento</class>-->
        <class>com.bo.openlogics.sales.model.Movimiento</class>
        <class>com.bo.openlogics.sales.model.Clasif_Marcas</class>
        <class>com.bo.openlogics.sales.model.Clasif_Unidades</class>
        <class>com.bo.openlogics.sales.model.Bodega_articulo</class>
        <class>com.bo.openlogics.sales.model.Clasif_Bodega</class>
        <class>com.bo.openlogics.sales.model.Usuario</class>
        <class>com.bo.openlogics.sales.model.Cliente</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL82Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.max_fetch_depth" value="10" />
        </properties>
    </persistence-unit>
</persistence>
